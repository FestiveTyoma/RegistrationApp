<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity">
    <TextView
            android:text="@string/textTvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etName"
            android:hint="@string/textEtName"
            android:autofillHints="@string/textEtName"
            app:layout_constraintStart_toStartOf="@+id/tvName" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/textTvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvSurname" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etName"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etSurname"
            android:hint="@string/textEtSurname"
            android:autofillHints="@string/textEtSurname"
            app:layout_constraintStart_toStartOf="@+id/tvName" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSurname" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/textTvAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvAge" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etSurname"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etAge"
            android:hint="@string/textEtAge"
            android:autofillHints="@string/textEtAge"
            app:layout_constraintStart_toStartOf="@+id/tvName" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAge" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/textTvMobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvMobile" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etAge"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etMobile"
            android:hint="@string/textEtMobile"
            android:autofillHints="@string/textEtMobile"
            app:layout_constraintStart_toStartOf="@+id/tvName" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMobile" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/textTvEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvEmail" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etMobile"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmail"
            android:hint="@string/textEtEmail"
            android:autofillHints="@string/textEtEmail"
            app:layout_constraintStart_toStartOf="@+id/tvName" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/textTvPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tvPassword" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etEmail"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword|numberPassword"
            android:ems="10"
            android:id="@+id/etPassword"
            android:hint="@string/textEtPassword"
            android:autofillHints="@string/textEtPassword"
            app:layout_constraintStart_toStartOf="@+id/tvName" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword|numberPassword"
            android:ems="10"
            android:id="@+id/etPasswordRepeat"
            android:hint="@string/textEtPasswordRepeat"
            android:autofillHints="@string/textEtPasswordRepeat"
            app:layout_constraintStart_toStartOf="@+id/tvName" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="@string/textButtonSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordRepeat"
            app:layout_constraintStart_toStartOf="@+id/etPasswordRepeat"
            app:layout_constraintEnd_toEndOf="@+id/etPasswordRepeat" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>
    <TextView
            android:text="@string/textTvRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRegistration"
            app:layout_constraintStart_toStartOf="@+id/tvName" app:layout_constraintEnd_toEndOf="@+id/tvName"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="24sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvName"/>
</android.support.constraint.ConstraintLayout>