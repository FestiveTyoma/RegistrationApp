<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

    <ImageView android:layout_width="0dp" android:layout_height="match_parent"
               android:id="@+id/logoImageView" android:layout_weight="2"
               android:visibility="visible"/>
    <TextView
            android:id="@+id/tvAlbumName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp" android:textColor="@color/black" android:layout_weight="1"
            android:gravity="center_horizontal"/>
    <TextView
            android:id="@+id/tvArtistName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp" android:textColor="@color/black" android:layout_weight="1"
            android:gravity="center_horizontal"/>
    <TextView
            android:id="@+id/tvSongsNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp" android:textColor="@color/black" android:layout_weight="1"
            android:gravity="center_horizontal"/>

</LinearLayout>